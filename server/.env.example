# Database
DATABASE_URL=sqlite:./data.db

# Telegram Bot Configuration
# Get your bot token from @BotFather in Telegram
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
ADMIN_TELEGRAM_ID=123456789

# Steam API Configuration (optional)
# Get your API key from https://steamcommunity.com/dev/apikey
STEAM_API_KEY=your_steam_api_key_here
STEAM_ID=your_steam_id_here

# Faceit API (optional)
FACEIT_API_KEY=your_faceit_api_key_here

# CS2 GSI Authentication
GSI_AUTH_TOKEN=my_super_secret_token_12345

# AI Configuration
# Get API key from https://openrouter.ai/
OPENROUTER_API_KEY=sk-or-v1-...
# Recommended free models:
# - google/gemini-2.0-flash-exp:free (fastest, may have availability issues)
# - meta-llama/llama-3.2-3b-instruct:free (stable)
# - qwen/qwen-2-7b-instruct:free (good quality)
AI_MODEL=google/gemini-2.0-flash-exp:free

# HH.ru Job Search
# Get from https://dev.hh.ru/
# Important: Register TWO redirect URIs in HH.ru app settings:
# - http://localhost:3001/auth/hh/callback (for local development)
# - https://bgalin.ru/auth/hh/callback (for production)
HH_CLIENT_ID=YOUR_HH_CLIENT_ID
HH_CLIENT_SECRET=YOUR_HH_CLIENT_SECRET
# Local development (use this for testing on localhost)
HH_REDIRECT_URI=http://localhost:3001/auth/hh/callback
# Production (deployment will override this automatically)
# HH_REDIRECT_URI=https://bgalin.ru/auth/hh/callback
JOB_SEARCH_INTERVAL_HOURS=4

# Server Configuration
ROCKET_ADDRESS=127.0.0.1
ROCKET_PORT=3001
ROCKET_ENV=development
